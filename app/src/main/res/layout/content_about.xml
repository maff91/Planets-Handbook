<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.AboutActivity"
    tools:showIn="@layout/activity_about">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="26sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="56dp"
        android:src="@drawable/handbook_logo"
        android:scaleType="centerInside"
        android:contentDescription="@string/app_name" />

    <TextView
        android:id="@+id/created_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/text_light_primary"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-light"
        android:textSize="18sp"
        android:text="@string/created_by"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/created_by"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/text_light_primary"
        android:textSize="22sp"
        android:text="@string/app_author"
        />

    <ImageView
        android:id="@+id/githubBtn"
        android:layout_width="96dp"
        android:layout_height="96dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/github"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/githubBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="18dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@color/text_light_primary"
        android:textSize="18sp"
        android:text="@string/project_on_github"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="32dp"
        android:fontFamily="sans-serif-light"
        android:text="Assets by Christopher Jones"
        android:textColor="@color/text_light_primary"
        android:textSize="22sp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>